{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "prefer-const": "error",
        "keyword-spacing": ["error"],
        "comma-dangle": ["error"],
        "object-curly-spacing": ["error", "always"],
        "quotes": ["error", "single"],
        "semi": [ 2, "always"],
        "comma-spacing": ["error", {}],
        "react/react-in-jsx-scope": "off",
        "eqeqeq": ["error", "smart"],
        "no-unused-vars": ["error", {
            "argsIgnorePattern": "^_",
            "destructuredArrayIgnorePattern": "^_",
            "caughtErrorsIgnorePattern": "^_",
            "varsIgnorePattern": "^_",
            "ignoreRestSiblings": true
        }]
    },
    "globals": {
        "chrome": "readonly"
    }
}
